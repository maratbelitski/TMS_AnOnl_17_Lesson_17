<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <gradient
        android:angle="135"
        android:centerX="35%"
        android:centerColor="@color/blue"
        android:startColor="@color/white"
        android:endColor="@color/yellow"
        android:type="linear"
        />
    <stroke
        android:width="3dp"
        android:color="@color/black"
        />
    <padding
        android:top="@dimen/padding_size_normal"
        android:bottom="@dimen/padding_size_normal"
        android:left="@dimen/padding_size_normal"
        android:right="@dimen/padding_size_normal"
        />

    <size android:width="@dimen/button_size"
        android:height="@dimen/button_size"/>
</shape>