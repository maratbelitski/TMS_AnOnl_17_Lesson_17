<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners
        android:radius="@dimen/button_radius_corners"/>
    <gradient
        android:angle="45"
        android:centerX="35%"
        android:centerColor="#00C853"
        android:endColor="#FF6D00"
        android:type="linear"
        />
    <stroke
        android:width="3dp"
        android:color="@color/grey"
        />
    <padding
        android:top="@dimen/padding_size_normal"
        android:bottom="@dimen/padding_size_normal"
        android:left="@dimen/padding_size_normal"
        android:right="@dimen/padding_size_normal"
        />

    <size android:width="@dimen/button_size"
        android:height="@dimen/button_size"/>
</shape>